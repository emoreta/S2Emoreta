<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S2Emoreta.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="SEMANA 3" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="txtUser" Placeholder="Usuario" />
        <Entry x:Name="txtPass" Placeholder="contraseña"  IsPassword="True"/>

        <Button x:Name= "btnAbrir" Text="Abrir" Clicked="btnAbrir_Clicked" />
    </StackLayout>
</ContentPage>
